module.exports = (robot) ->
  robot.respond /applauders/i, (msg) ->
    applause msg
  robot.respond /(applause|clap(?!:))/i, (msg) ->
    applause msg
  robot.respond /\:thumbsup\:|\:\+1\:/i, (msg) ->
    o = Math.floor(Math.random() * 5)
    if o is 2 then msg.send msg.random thumbsup
  robot.respond /\:thumbsdown\:|\:\-1\:/i, (msg) ->
    o = Math.floor(Math.random() * 5)
    if o is 2 then msg.send msg.random thumbsdown
  robot.respond /^\:(\/|\()$/, (msg) ->
    o = Math.floor(Math.random() * 4)
    if o is 2 then msg.send msg.random sad

  robot.respond /not bad/i, (msg) ->
    o = Math.floor(Math.random() * 10)
    if o is 2 then msg.send msg.random notbad

  robot.respond /(i have no idea what i\'m doing)/i, (msg) ->
    msg.send msg.random noideadog

  robot.respond /.*(popcorn).*/i, (msg) ->
    msg.send msg.random popcorn

  robot.respond /(facepalm)/i, (msg) ->
    facepalm msg if !msg.match(/\bmeme\b/)

  robot.respond /haters/i, (msg) ->
    hatin msg
  robot.respond /(haters gonna hate|hgh)/i, (msg) ->
    hatin msg

  robot.respond /.*(ninja).*/i, (msg) ->
    msg.send msg.random ninjas

  robot.respond /\b((wh?)?oo+ps)\b/i, (msg) ->
    msg.send msg.random mistakes

  robot.respond /.*(CMON|C\'MON|Come on).*/i, (msg) ->
    msg.send msg.random gob

  robot.respond /\b(dance)\b/i, (msg) ->
    msg.send msg.random carltons

  robot.respond /\b(cry)\b/i, (msg) ->
    msg.send msg.random dawsons

  robot.respond /.*(:upsell:|:upsold:).*/i, (msg) ->
    msg.send "https://bluestatedigital.campfirenow.com/room/198307/uploads/3240964/4e48939fc5a9a.gif"

  robot.respond /(high five|highfive)/i, (msg) ->
    msg.send msg.random highfives

  robot.respond /(do the creep)/i, (msg) ->
    creepin msg

  robot.respond /(clear)/i, (msg) ->
    msg.send "http://i.imgur.com/59jb9t7.png", "http://i.imgur.com/59jb9t7.png", "http://i.imgur.com/59jb9t7.png"

  robot.respond /(opaque)/i, (msg) ->
    randcolors = []
    pattern = '0123456789ABCDEF'.split ''
    length = pattern.length - 1
    for i in [1..3]
      randcolor = '' 
      for i in [1..6]                                                                                                 
        randcolor += pattern[Math.round(Math.random() * length)]
      randcolors.push randcolor
    for color in randcolors
      msg.send 'http://placehold.it/200x200/'+color+'/'+color+'#.png'

  robot.respond /(that\'s so fetch|stop trying to make fetch happen)/i, (msg) ->
    msg.send "http://missmonet.net/wp-content/uploads/2014/04/so-fetch-gretchen-xmas-gif.gif"
    setTimeout () ->
      msg.send "http://media.tumblr.com/tumblr_mari6alYBB1qgumxh.gif"
     , 2 * 1000

  robot.respond /(fts)/i, (msg) ->
